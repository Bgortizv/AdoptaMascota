@model IEnumerable<AdoptarMascota.Models.Mascota>
@{
    ViewBag.Title = "Adoptar";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<section class="content">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-4 col-md-4 col-lg-4">
                    <div>
                        <div class="well">
                            <h2 class="text-info">@item.Nombre</h2>
                            @if (item.Adoptado)
                            {
                                <p><span class="label label-default">Adoptado</span></p>
                            }
                            else
                            {
                                <p><span class="label label-success">Disponible</span></p>
                            }
                        <ul>
                            <li>Edad: @item.Edad</li>
                            <li>Contacto: @item.CorreoContacto</li>
                        </ul>
                        <p><strong>Descripción: </strong></p>
                        <p>@item.Descrip</p>
                            @if (!item.Adoptado)
                            {
                        <p><a class="btn btn-sm btn-primary" href="#">Adoptar</a></p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>

</section>